<div class="wrapper">

  <h5>Please enter your default location</h5>

  <%= form_for current_user do |form| %>
    <div>
      <%= form.label "City" %>
      <%= form.text_field :city, placeholder: "City" %>
    </div>
    <div>
      <%= form.label "Zip Code" %>
      <%= form.text_field :zip, placeholder: "Zip Code" %>
    </div>
    <div>
      <%= form.check_box :gets_email %>
      <h5><%= form.label "Check to receive weekly updates of newly uploaded shows" %></5>
    </div>
    <div>
      <%= form.submit "Update User Preferences" %>
    </div>
  <% end %>
</div>

